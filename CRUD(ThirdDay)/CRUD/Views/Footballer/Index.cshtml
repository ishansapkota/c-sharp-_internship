@model List<CRUD.Models.FootballerDetails>


<h1>Footballers</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Footballer Name</th>
            <th>Clubs</th>
            <th>Date of Birth</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var footballer in Model)
        {
            <tr>
                <td>@footballer.id</td>
                <td>@footballer.Name</td>
                <td>@footballer.Club</td>
                <td>@footballer.DoB.ToString("dd-MM-yyyy")</td>
                <td><a href="Footballer/View/@footballer.id" >View</a></td>
            </tr>
        }
    </tbody>
</table>


