@model CRUD.Models.UpdateFootballerViewModel

@{
}

<h1> EDIT FOOTBALLERS </h1>
<form method="post" action="View" class="mt-4">
    <div class="form-group">
        <label for="" class="form-label">ID</label>
        <input type="text" class="form-control" asp-for="id" readonly>
    </div>

    <div class="form-group">
        <label for="" class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name">
    </div>

    <div class="form-group">
        <label for="" class="form-label">Club</label>
        <input type="text" class="form-control" asp-for="Club">
    </div>

    <div class="form-group">
        <label for="" class="form-label">Date of Birth</label>
        <input type="date" class="form-control" asp-for="DoB">
    </div>

    <button type="submit" class="btn btn-primary" >Update</button>

   <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Footballer">Delete</button>
</form>
