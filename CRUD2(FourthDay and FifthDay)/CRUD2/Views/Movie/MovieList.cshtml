@model List<CRUD2.Models.Movies>
@{
}

@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-success">
        <strong>SUCCESS! </strong>@TempData["AlertMessage"]
    </div>
}

@if (TempData["DangerMessage"] != null)
{
    <div class="alert alert-danger">
        <strong>SUCCESS! </strong>@TempData["DangerMessage"]
    </div>
}


<section class="intro">
    <div class="bg-image h-100" style="background-color: #6095F0;">
        <div class="mask d-flex align-items-center h-100">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-12">
                        <div class="card shadow-2-strong" style="background-color: #f5f7fa;">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-borderless mb-0">
                                        <thead>
                                            <tr>

                                               
                                                <th scope="col">MOVIE NAME</th>
                                                <th scope="col">GENRE</th>
                                                <th scope="col">RELEASE DATE</th>
                                                <th scope="col">ACTORS AND ACTRESSES</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var i in Model)
                                            {
                                                <tr>
                                                    <td>@i.MovieName</td>
                                                    <td>@i.Genre</td>
                                                    <td>@i.ReleaseDate.ToString("dd-MM-yyyy")</td>
                                                    <td>@i.Actors</td>
                                                    <td><a href="Movie/Update/@i.Id" class="btn btn-info">View</a></td>
                                                </tr>
                                            }

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/js/view.js" asp-append-version="true"></script>
<link rel="stylesheet" href="~/css/view.css" />