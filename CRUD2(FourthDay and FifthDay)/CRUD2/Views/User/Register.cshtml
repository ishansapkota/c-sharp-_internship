@model CRUD2.Models.User
@{
}
<link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />
<script src="~/js/register.js" asp-append-version="true"></script>
<br>
<br>
<div class="cont">
    <div class="form sign-in">
        <h2>Welcome</h2>
        <label>
            <span>Email</span>
            <input type="email" />
        </label>
        <label>
            <span>Password</span>
            <input type="password" />
        </label>
        <p class="forgot-pass">Forgot password?</p>
        <button type="button" class="submit">Sign In</button>

    </div>
    <div class="sub-cont">
        <div class="img">
            <div class="img__text m--up">

                <h3>Don't have an account? Please Sign up!<h3>
            </div>
            <div class="img__text m--in">

                <h3>If you already have an account, just sign in.<h3>
            </div>
            <div class="img__btn">
                <span class="m--up">Sign Up</span>
                <span class="m--in">Sign In</span>
            </div>
        </div>
        <form class="requires-validation" novalidate method="post" action="Register">
            <div class="form sign-up">
                <h2>Create your Account</h2>
                <label>
                    <span>Username/Email</span>
                    <input type="text" asp-for="Username" />
                </label>
                <label>
                    <span>Password</span>
                    <input type="password" asp-for="Password" />
                </label>
                @* <label>
                <span>Confirm Password</span>
                <input type="password" asp-for="Password" />
                </label> *@
                <button type="submit" class="submit" asp-controller="User" asp-action="Register">Sign Up</button>

            </div>
        </form>
    </div>
</div>

<script>
    document.querySelector('.img__btn').addEventListener('click', function () {
        document.querySelector('.cont').classList.toggle('s--signup');
    });
</script> 

