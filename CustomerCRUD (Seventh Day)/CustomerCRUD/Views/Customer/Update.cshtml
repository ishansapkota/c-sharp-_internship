@model CustomerCRUD.Models.Customer


@{
}



<h1>UPDATE CUSTOMER</h1>
<form class="mt-5" method="post" action="Update">

    <div class="mb-3">
        <label class="form-label">ID</label>
        <input type="text" class="form-control" id="exampleName" asp-for="ID" readonly>
    </div>

    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" id="exampleName" asp-for="Name">
    </div>

    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Email address</label>
        <input type="email" class="form-control" asp-for="Email">
    </div>

    <div class="mb-3">
        <label class="form-label">Address</label>
        <input type="text" class="form-control" id="exampleName" asp-for="Address">
    </div>

    <div class="mb-3">
        <label class="form-label">Phone Number</label>
        <input type="text" class="form-control" id="exampleName" asp-for="Phone">
    </div>

    <div class="mb-3">
        <label class="form-label">Date of Birth</label>
        <input type="date" class="form-control" id="exampleName" asp-for="DoB">
    </div>


    <button type="submit" class="btn btn-primary" asp-controller="Customer" asp-action="Update">Add</button>
</form>